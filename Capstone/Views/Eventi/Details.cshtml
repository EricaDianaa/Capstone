                {
                    <img src="/Content/Img/@Html.DisplayFor(model => model.Foto2)" class="w-50 p-1 rounded-4 " alt="Foto aggiuntive" />
                }

            </div>
            <div class="d-flex">
                @if (Model.Foto3 != "" || Model.Foto3 != null)
                {
                    <img src="/Content/Img/@Html.DisplayFor(model => model.Foto3)" class="w-50 p-1 rounded-4 " alt="Foto aggiuntive" />
                }

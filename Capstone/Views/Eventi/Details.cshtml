            <p>@Html.DisplayFor(model => model.Prezzo) </p>
            <strong style="font-family:cursive;color:orange">Luogo</strong>
            <p>@Html.DisplayFor(model => model.Luogo)</p>
            <strong style="font-family:cursive;color:orange">Indirizzo</strong>
            <p>@Html.DisplayFor(model => model.Indirizzo)</p>
            <strong style="font-family:cursive;color:orange">Data inizio</strong>
            <p>@Html.DisplayFor(model => model.DataDa)</p>
            <strong style="font-family:cursive;color:orange">Data Fine</strong>
            <p>@Html.DisplayFor(model => model.DataEvento) </p>

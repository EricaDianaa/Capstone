@model Capstone.Models.Utenti

@{
    ViewBag.Title = "RecuperoPassword";
}

<h2>RecuperoPassword</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Utenti</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Username</h3>
    <input type="text" name="Username" id="Username" value="" />
    <h3>Codice fiscale</h3>
    <input type="text" name="CodiceFiscale" id="CodiceFiscale" value="" />
    <h3>Nuova password</h3>
    <input type="text" name="NewPassword" id="NewPassword" value="" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <div>
        <h4 class="text-danger">@ViewBag.ErroreNumerico</h4>
        <h4 class="text-danger">@ViewBag.ErroreCarattereSpeciale</h4>
        <h4 class="text-danger">@ViewBag.ErroreletteraMaiuscola</h4>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

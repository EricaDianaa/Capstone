@model Capstone.Models.Utenti

@{
    ViewBag.Title = "EditPassword";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Reset Password</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3>Vecchia password</h3>
    <input type="text" name="OldPassword" id="OldPassword" value="" />
    <h3>Nuova password</h3>
    <input type="text" name="NewPassword" id="NewPassword" value="" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <div>
        <h4 class="text-danger">@ViewBag.ErroreNumerico</h4>
        <h4 class="text-danger">@ViewBag.ErroreCarattereSpeciale</h4>
        <h4 class="text-danger">@ViewBag.ErroreletteraMaiuscola</h4>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

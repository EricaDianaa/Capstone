                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Utenti", "index", "utenti", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Eventi", "index", "Eventi", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Ordini", "index", "Ordini", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Categorie", "index", "Categorie", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Recensioni", "index", "Recensioni", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Resoconto", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>

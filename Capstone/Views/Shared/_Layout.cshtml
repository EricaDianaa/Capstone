                </div>
            </div>
        </nav>
    }
    else if (User.IsInRole("Azienda"))
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                @Html.ActionLink("EventSardigna", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

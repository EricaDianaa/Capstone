@model Capstone.Models.Categorie

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/StyleEditAdmin.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-center" id="Form">
        <h4 id="Title" class="text-center">Categorie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdCategoria)

        <div class="form-group">
            @Html.LabelFor(model => model.NomeCategoria, htmlAttributes: new { @class = "control-label text-warning fw-bold" })
            <div class="">
                @Html.EditorFor(model => model.NomeCategoria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Modifica" class="btn btn-warning mt-2" />
            </div>
        </div>
    </div>
}



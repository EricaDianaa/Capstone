@model Capstone.Models.Ordini

@{
    ViewBag.Title = "Edit";
}


<link href="~/Content/StyleEditAdmin.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" id="Form">
        <h2 id="Title" class="text-center">Modifica ordine</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdOrdini)

        <div class="form-group text-center" id="Form">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label text-warning fw-bold" })
            <div class="">
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control",type="date" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.IdUtente, "IdUtente", htmlAttributes: new { @class = "control-label text-warning fw-bold" })
            <div class="">
                @Html.DropDownList("IdUtente", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdUtente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 ">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

